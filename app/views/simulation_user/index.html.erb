<div class="wrapper wrapper-content animated fadeInDown">
  <div class="row">
    <div class="col-md-12">
      <div class="ibox">
        <div class="ibox-title">
          <h5>Evaluaciones Prácticas de <%= current_user.nombre_completo %></h5>
        </div>
        <div class="ibox-content">
          <% if @simulations.count == 0 %>
            <h1 class="p-lg text-muted">No cuentas con evaluaciones prácticas registradas.</h1>
          <% end %>
          <div class="row">
            <% @simulations.each do |simulation| %>
              <div class="col-lg-4">
                <% if simulation.get_estado == 1 %>
                  <div class="widget-head-color-box lazur-bg p-lg text-center">
                    <h2 class="font-bold no-margins">
                      Evaluación Práctica Agendada
                    </h2>
                    <small>Solicitud realizada el <%= simulation.created_at.strftime("%d/%m/%Y") %> a las <%= simulation.created_at.strftime('%I:%M:%S %p') %></small>
                  </div>
                <% else %>
                  <div class="widget-head-color-box blue-bg p-lg text-center">
                    <h2 class="font-bold no-margins">
                      Evaluación Práctica Presentada
                    </h2>
                    <small>Solicitud realizada el <%= simulation.created_at.strftime("%d/%m/%Y") %> a las <%= simulation.created_at.strftime('%I:%M:%S %p') %></small>
                  </div>
                <% end %>
                <div class="widget-text-box">
                  <div class="row p-w-xs">
                    <hr>
                    <div class="col-lg-4"><b>Cita:</b></div>
                    <div class="col-lg-8"><%= "#{simulation.appointment.fecha.strftime("%d/%m/%Y")}, #{simulation.appointment.hour.rango_horas}" %></div>
                  </div>
                  <div class="row p-w-xs">
                    <hr>
                    <div class="col-lg-4"><b>Obstáculos Derribados:</b></div>
                    <% if simulation.get_estado > 1 %>
                      <div class="col-lg-8"><%= simulation.obstaculos_derribados %></div>
                    <% else%>
                      <div class="col-lg-8">-</div>
                    <% end %>
                  </div>
                  <div class="row p-w-xs">
                    <hr>
                    <div class="col-lg-4"><b>Luces Rojas Ignoradas:</b></div>
                    <% if simulation.get_estado > 1 %>
                      <div class="col-lg-8"><%= simulation.semaforos %></div>
                    <% else%>
                      <div class="col-lg-8">-</div>
                    <% end %>
                  </div>
                  <div class="row p-w-xs">
                    <hr>
                    <div class="col-lg-4"><b>Velocidad Promedio:</b></div>
                    <% if simulation.get_estado > 1 %>
                      <div class="col-lg-8"><%= "#{simulation.velocidad_promedio} km/h" %></div>
                    <% else%>
                      <div class="col-lg-8">-</div>
                    <% end %>
                  </div>
                  <div class="row p-w-xs">
                    <hr>
                    <div class="col-lg-4"><b>Tiempo de Simulación:</b></div>
                    <% if simulation.get_estado > 1 %>
                      <div class="col-lg-8"><%= simulation.duracion_horas_minutos_segundos %></div>
                    <% else%>
                      <div class="col-lg-8">-</div>
                    <% end %>
                  </div>
                  <div class="row p-h-xs">
                    <div class="col-lg-12">
                      <div class="text-right">
                        <% if simulation.quiz.puntaje >= 8 && !simulation.quiz.simulation.fecha_aplicacion.blank? %>
                            <%= link_to simulation_endpoint_show_path(simulation.quiz.id, format: "pdf"), target: :_blank do %>
                              <span class="btn btn-xs btn-mg btn-primary"><i class="fa fa-file-pdf-o"></i> Generar Dictamen</span>
                            <% end %>
                          <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>